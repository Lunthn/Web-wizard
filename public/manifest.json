{
  "manifest_version": 3,
  "name": "Web Wizard",
  "version": "1.1",
  "description": "Analyze website designs - instantly reveal color palettes and typography choices with a single click.",
  "action": {
    "default_popup": "index.html"
  },
  "author": "Nathan Lupke",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle",
      "type": "module"
    }
  ],
  "icons": {
    "16": "icon-16.png",
    "32": "icon-32.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "{f29d84e2-1b4c-4e9d-bd4e-7d2f1c3e1a9f}"
    }
  }
}